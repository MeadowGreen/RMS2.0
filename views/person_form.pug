doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
    link(href='/stylesheets/style.css' rel='stylesheet')
    script(src='/stylesheets/script.js')
    title RMS
  body#person
    #header
      button.openbtn(onclick='openNav()') &#9776;
      h1 Records Management System
    #mySidebar.sidebar
      a.closebtn(href='javascript:void(0)' onclick='closeNav()') &times;
      a(href='/catalog') Home
      a(href='/catalog/incidents') All incidents
      a(href='/catalog/persons') All persons
      a(href='/catalog/vehicles') All vehicles
    form#main.row.g-3
      center
        h1 Person Report
      #content
        .row
          .col
            label.form-label(for='formGroupExampleInput') First
            input.form-control(type='text' placeholder='' aria-label='First name')
          .col
            label.form-label(for='formGroupExampleInput') Last
            input.form-control(type='text' placeholder='' aria-label='Last name')
          .col
            label.form-label(for='formGroupExampleInput') Middle
            input.form-control(type='text' placeholder='' aria-label='Middle name')
        .mb-3
          label.form-label(for='formGroupExampleInput') SSN #
          input#formGroupExampleInput.form-control(type='text' placeholder='')
        .row
          label.form-label(for='formGroupExampleInput') Driver's License
          .col
            input.form-control(type='text' placeholder='DL #' aria-label='DL #')
          .col
            input.form-control(type='text' placeholder='DL State' aria-label='DL State')
          .col
            input.form-control(type='text' placeholder='DL Exp. Date' aria-label='DL Exp. Date')
        .row
          .col
            label.form-label(for='formGroupExampleInput') Age
            input#formGroupExampleInput.form-control(type='text' placeholder='')
          .col
            label.form-label(for='formGroupExampleInput') Height
            input.form-control(type='text' placeholder='' aria-label='Height')
          .col
            label.form-label(for='formGroupExampleInput') Weight
            input.form-control(type='text' placeholder='' aria-label='Weight')
        .row
          .col
            label.form-label(for='formGroupExampleInput') Race
