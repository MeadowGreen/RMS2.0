            input.form-control(type='text' placeholder='Year' aria-label='Year')
        .row
          .col
            label.form-label(for='formGroupExampleInput') Home Address
            input#formGroupExampleInput.form-control(type='text' placeholder='Address City, State ')
          .col
            label.form-label(for='formGroupExampleInput') Phone Number
            input#formGroupExampleInput.form-control(type='text' placeholder='(000)000-000')
        .row
          .col
            input(value='yes' type='checkbox')
            label.form-label(for='formGroupExampleInput') Gang Affiliation
            input#formGroupExampleInput.form-control(type='text' placeholder='Provide gang name (if possible)')
          .col
            input(value='yes' type='checkbox')
            label.form-label(for='formGroupExampleInput') Scars/Marks
            input#formGroupExampleInput.form-control(type='text' placeholder='Provide details (if possible)')
          .col
            input(value='yes' type='checkbox')
            label.form-label(for='formGroupExampleInput') Hazards
            input#formGroupExampleInput.form-control(type='text' placeholder='Provide hazards (if possible)')
        .row
          .col
            label.form-label(for='formGroupExampleInput') SSN #
            input#formGroupExampleInput.form-control(type='text' placeholder='000-00-0000')
          .col
            label.form-label(for='formGroupExampleInput') Gender
            select.form-select(aria-label='Default select example')
              option(selected value='U') Unknown
              option(value='M') Male
              option(value='F') Female
